<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>mm_book_a_trip</from-outcome>
			<to-view-id>/view/start_trip.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>mm_shopping_cart</from-outcome>
			<to-view-id>/view/shopping_cart.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<application>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>cs</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>local</var>
		</resource-bundle>
	</application>
</faces-config>
